# Configuración de entorno para Multipaga
# Basado en las especificaciones del Control Center de Hyperswitch

# Entorno de ejecución (sandbox | production)
VITE_ENVIRONMENT=sandbox
REACT_APP_HYPERSWITCH_ENVIRONMENT=sandbox

# URLs de la API de Hyperswitch
VITE_HYPERSWITCH_API_URL_SANDBOX=https://sandbox.hyperswitch.io
VITE_HYPERSWITCH_API_URL_PRODUCTION=https://api.hyperswitch.io
REACT_APP_SANDBOX_URL=https://sandbox.hyperswitch.io
REACT_APP_PRODUCTION_URL=https://api.hyperswitch.io
REACT_APP_API_BASE_URL=https://sandbox.hyperswitch.io

# Claves públicas del SDK (estas deben ser configuradas según tu cuenta)
# VITE_HYPERSWITCH_PUBLISHABLE_KEY_SANDBOX=pk_snd_your_sandbox_key_here
# VITE_HYPERSWITCH_PUBLISHABLE_KEY_PROD=pk_live_your_production_key_here
REACT_APP_HYPERSWITCH_PUBLISHABLE_KEY=pk_snd_55fefff413b14cfbaf45281a99cbad8c
REACT_APP_HYPERSWITCH_SECRET_KEY=sk_snd_your_secret_key_here

# Configuración de la aplicación
VITE_APP_NAME=Multipaga
VITE_APP_VERSION=1.0.0

# URLs de retorno para pagos
VITE_PAYMENT_RETURN_URL=http://localhost:5173/payment-complete
VITE_PAYMENT_CANCEL_URL=http://localhost:5173/payment-cancelled

# Configuración de logs
VITE_LOG_LEVEL=info
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_CONSOLE_LOGS=true

# Configuración de idioma por defecto
VITE_DEFAULT_LOCALE=es
REACT_APP_DEFAULT_LANGUAGE=es

# Configuración de tema
VITE_DEFAULT_THEME=light
REACT_APP_THEME=light
REACT_APP_ENABLE_DARK_MODE=true

# Configuración de debugging
VITE_DEBUG_MODE=true
REACT_APP_DEBUG_MODE=true
REACT_APP_MOCK_API=false

# Claves de API por entorno
REACT_APP_SANDBOX_API_KEY=snd_L5s6GDTmSImdZsRejy2fiB4kL7H9nPa98EY9fOcyYDwz6Tra571XlnxUF59aCHRT
REACT_APP_PRODUCTION_API_KEY=hyperswitch

# URLs de endpoints específicos
REACT_APP_AUTH_URL=/auth
REACT_APP_PAYMENTS_URL=/payments
REACT_APP_CUSTOMERS_URL=/customers
REACT_APP_CONNECTORS_URL=/connector-accounts

# Configuración de versiones de API
REACT_APP_API_VERSION=V2
REACT_APP_DEFAULT_API_VERSION=V1

# Configuración de características
REACT_APP_ENABLE_2FA=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_CONNECTORS=true
REACT_APP_ENABLE_DISPUTES=true
REACT_APP_ENABLE_REFUNDS=true

# Configuración de sesión
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_TOKEN_REFRESH_INTERVAL=300000

# Configuración de paginación
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_PAGE_SIZE=100

# URLs de documentación y soporte
REACT_APP_DOCS_URL=https://docs.hyperswitch.io
REACT_APP_SUPPORT_URL=https://support.hyperswitch.io

# Configuración de Mixpanel (si se usa)
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token_here
REACT_APP_ENABLE_ANALYTICS_TRACKING=false

# Configuración de cookies
REACT_APP_COOKIE_DOMAIN=localhost
REACT_APP_SECURE_COOKIES=false

# Configuración de CORS
REACT_APP_CORS_ENABLED=true
REACT_APP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

